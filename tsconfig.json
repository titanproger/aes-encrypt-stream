{
    "compilerOptions": {
        "outDir": "lib",
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}